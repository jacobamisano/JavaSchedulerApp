<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.StaffScheduleFX.MainScreenController">
   <children>
   <!-- Note: fx:id attributes are not needed due to no reference to the text/buttons other than events handled in the onAction -->
      <Label text="Please select an option from the choices below." />
      <Button text="Enter Employee Data" onAction="#onBtnAddEmployeeClick"/>
      <Button text="Enter Time-OFf Request" onAction="#onBtnAddTimeOffClick"/>
      <Button text="ViewCurrentEmployees" onAction="#onBtnViewEmployeeClick"/>
      <Button text="ViewCurrentEmployees" onAction="#onBtnEditSchedulePreferencesClick"/>
      <Button text="Build Schedule for the current week" onAction="#onBtnBuildScheduleClick"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
